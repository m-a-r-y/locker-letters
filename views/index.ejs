<!DOCTYPE html>
<html>
  <head>
    <title>Cat Meow</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.css">
      <script src="https://code.jquery.com/jquery-2.1.1.js"></script>
      <script src="/javascripts/index.js"></script>

  </head>
  <body>



    <div class="container">
        <div class="row">
        <% for (var i = 0; i < catFiles.length; i++) { %>
            <img class="image" src="/images/<%= catFiles[i] %>" height="100"/>
        <% } %>
        </div>
        <form role="form" class="form" action="/sendMail" method="post">
            <div class="row">
                <!--<div class="form-group">-->
                    <!--<label for="myEmail">Please enter your email:</label>-->
                    <!--<input type="email" class="form-control" id="myEmail" placeholder="your@domain.com">-->
                <!--</div>-->
                <div class="form-group">
                    <label for="theirEmail">Please enter recipient's email:</label>
                    <input type="email" name="theirEmail" class="form-control" id="theirEmail" placeholder="their@domain.com">
                </div>
                <div class="form-group">
                    <label for="message">Message:</label>
                    <textarea class="form-control" name="messages" id="message" rows="5"></textarea>
                </div>
             </div>

            <button id="submit" type="submit" class="btn btn-default">Submit</button>
        </form>
    </div>

  </body>
</html>
